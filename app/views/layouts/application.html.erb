<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 100%;
      }
    </style>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
       <%= link_to "Strona główna", root_path, method: :get, :class => "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if not user_signed_in? %>
        <li<% if params[:controller] == "devise/registrations" && params[:action] == "new" %> class="active" <% end %>><a href="/users/sign_up">Zarejestruj się <span class="sr-only">(current)</span></a></li>
        <li<% if params[:controller] == "devise/sessions" && params[:action] == "new" %> class="active" <% end %>><%= link_to "Zaloguj się",new_user_session_path, method: :get%> <span class="sr-only">(current)</span></a></li>
        <% else %>
        <li><%= link_to "Wyloguj", destroy_user_session_path, method: :delete %><span class="sr-only">(current)</span></a></li>
        <li<% if params[:controller] == "devise/registrations" && params[:action] == "edit" %> class="active" <% end %>><%= link_to "Profil", edit_user_registration_path, method: :get %><span class="sr-only">(current)</span></a></li>
        <% end %>
        <li<% if params[:controller] == "home" && params[:action] == "contact" %> class="active" <% end %>><a href="<%= contact_path %>">Kontakt</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lista <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Komentarze użytkowników", comments_path, method: :get%></a></li>
            <li><%= link_to "Nowy Komentarz", new_comment_path, method: :get %></li>
            <li><a href="#">cos3</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">cos4</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">cos5</a></li>
          </ul>
        </li>
        <li class="dropdown"> <!-- Shops bar -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lista Sklepów<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Sklepy",  shops_path, method: :get%></a></li>
            <li><%= link_to "Nowy sklep", new_shop_path, method: :get%></a></li>
            <li><a href="#">cos3</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">cos4</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">cos5</a></li>
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Szukaj</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><a>Witaj <%= current_user.username %></a></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


<div class="container">

  <%= yield %>



</div>
</body>
</html>
