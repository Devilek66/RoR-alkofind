<h1>Commenty</h1>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Author</th>
    <th>Show</th>
    <th>Edit</th>
  </tr>
 
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.title %></td>
      <td><%= comment.text %></td>
      <td><%= comment.author %></td>
      <td><%= link_to 'Show', comment_path(comment) %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    </tr>
  <% end %>
</table>